{
	"compilerOptions": {
		"module": "ESNext",
		"target": "es2020",
		"lib": [
			"ESNext",
			"DOM"
		],
		"esModuleInterop": true,
		"strict": true,
		"strictNullChecks": true,
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"types": [
			"@types/node",
			"@lodash/types",
			"vite/client",
			"vue/ref-macros"
		]
	},
	"exclude": [
		"**/dist",
		"**/node_modules",
		"**/test"
	]
}
